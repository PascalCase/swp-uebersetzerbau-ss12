package main;

import java.util.List;

import main.model.Address;
import main.model.Variable;

public class VariableTable {
	// Wir haben 4 frei zur Verfügung stehende Register richtig?
	private static int numReg = 4;
	VarAdministration varAd;
	
	public VariableTable() {
		varAd = new VarAdministration(numReg);
	}

	public void addVariable(Variable variable) {
		varAd.addVariable(variable);
	}
	
	/*
	 * returns all Variables in the Table
	 */
	public List<Variable> getVariables() {
		return varAd.getAllVariables();
	}
	
	public List<Address> gerAddressesOf(Variable var) {
		return varAd.getAddresses(var);
	}
	
	
	
	
	//TODO
	public int getAllign(String variableName) {
		int allign = 0;
		
		
		return allign;
	}
	
	
}
